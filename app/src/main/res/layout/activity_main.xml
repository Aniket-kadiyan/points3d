<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- existing SceneView -->
    <io.github.sceneview.SceneView
        android:id="@+id/sceneView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- existing info text -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:gravity="bottom"
        android:padding="16dp"
        android:text="Tap a point to see details"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- new overlay panel for choosing modes -->
    <LinearLayout
        android:id="@+id/modePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/rotateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate" />

        <Button
            android:id="@+id/panButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan" />

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select" />
    </LinearLayout>

    <!-- new floating button to toggle the panel -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Mode Selector"
        app:srcCompat="@android:drawable/ic_menu_manage" />
</FrameLayout>
